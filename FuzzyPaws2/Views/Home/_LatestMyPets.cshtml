@model DashboardViewModel

<div class="card">
<div class="card-header">
<h3 class="card-title">Recently Added Pets by our users! You can show off yours as well!</h3>
<div class="card-tools">

 </div>
</div>

<div class="card-body p-0">
<ul class="products-list product-list-in-card pl-2 pr-2">
    @foreach(var pet in @Model.MyPets){
    <li class="item">
    <div class="product-img">
        <a asp-controller="MyPet" asp-action="Details" asp-route-id="@pet.Id">
            <img src="@FileLocation.RetriveFileFromFolder@pet.Image"
            asp-append-version="true" alt="Pet Image" class="img-size-50">
        </a>
    </div>
    <div class="product-info">
    <a asp-controller="MyPet" asp-action="Details" asp-route-id="@pet.Id" class="product-title">@pet.Name
    <span class="badge badge-success float-right">@pet.PetType</span></a>
    <span class="product-description">
        @pet.Description
    </span>
    </div>
    </li>
    }
</ul>
</div>

<div class="card-footer text-center">
<a asp-controller="MyPet" asp-action="Index" class="uppercase">Manage your own pets</a>
</div>

</div>