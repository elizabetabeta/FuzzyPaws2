<h3> Profit by Months: </h3>


@{
    int i = 1;
}
@while( i < 13){
    <h6 class="text-success">
        @(getMonthName(i)): @(Model.AllAppointments.Where(x => x.Time.Month == i).Sum(b => b.FinalPrice))$
    </h6>
        i++;
    }
