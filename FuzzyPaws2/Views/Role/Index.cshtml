@model RoleIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<br />
<h1 class="text-primary">List of Roles</h1>
<br /> <br />
<table class="table table-striped table-bordered">
    <thead>
        <tr class="text text-primary">
            <th>Id</th>
            <th>Name</th>
            <th>List</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.AllRoles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><a asp-controller="User" asp-action="@role.Name">Click here</a></td>
            </tr>

        }
    </tbody>
</table>