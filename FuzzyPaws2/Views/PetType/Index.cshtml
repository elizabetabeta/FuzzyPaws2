@model PetTypeIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> 
                List of pet types <i class="fa-solid fa-dog"></i>
            </h2>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-6 text-end">
                <a asp-controller="PetType" asp-action="Create" class="btn btn-primary"> 
                <i class="fa-solid fa-heart-circle-plus"></i>
                Add new type of pets
             </a>
        </div>
        }
    </div>
</div>

<div class="row text-center">
@foreach(var type in Model.AllTypesOfPets)
{            
    <div class="card col-3 pb-2 pt-2" id="cardradius">
        <a asp-controller="PetType" asp-action="Details" asp-route-id="@type.Id">
            <img id="imglist" class="card-img-top" height="100%" width="100" style="min-height:280px" src="@FileLocation.RetriveFileFromFolder@type.Image" asp-append-version="true" alt="Card image cap" />  
        </a>
            <div class="card-body">
                <a asp-controller="PetType" asp-action="Details" asp-route-id="@type.Id">
                <h5 class="card-title">@type.Name</h5>
                </a>
                @*<p class="card-text">@type.Description</p>
               
                <div class="w-75 btn-group" role="group">
                        <a asp-controller="PetType" asp-action="Edit" asp-route-id="@type.Id"
                        class="btn btn-primary mx-2">
                        <i class="bi bi-pen"></i>
                        Edit</a>
                         <a asp-controller="PetType" asp-action="Delete" asp-route-id="@type.Id" class="btn btn-danger"> 
                        <i class="bi bi-trash3"></i>
                        Delete</a>         
                 </div>*@
            </div>
    </div>
 }
 </div>

