@model UserIndexViewModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> 
                <i class="bi bi-people"></i> 
                List of vets
            </h2>
        </div>
        <div class="col-6 text-end">
            <a id="register" asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary"> 
                <i class="bi bi-person-plus"></i>
                Add new user
             </a>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
    <tr>
      <th scope="col"><i class="bi bi-person-square"></i></th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
@foreach(var user in Model.AllUsers)
{            
  <tbody>
    <tr>
      <th scope="row"></th>
      <td>@user.UserName</td>
      <td>@user.Email</td>
      <td>@user.PhoneNumber</td>
      <td>
          <a asp-controller="User" asp-action="EditVet" asp-route-id="@user.Id" class="btn btn-primary"> 
                        <i class="bi bi-person-check"></i>
                        Edit
                    </a>
          <a asp-controller="User" asp-action="DeleteVet" asp-route-id="@user.Id" class="btn btn-danger"> 
                        <i class="bi bi-person-dash"></i>
                        Delete
                    </a>
      </td>
    </tr>
  </tbody>
 }
 </table>