@model PetBreedIndexViewModel
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> 
                List of pet breeds <img src="~/images/cat-icon.png" style="height:50px;width:50px"/>
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="PetBreed" asp-action="Create" class="btn btn-primary"> 
                <i class="bi bi-plus-circle"></i>
                Add new pet breed
             </a>
        </div>
    </div>
</div>

