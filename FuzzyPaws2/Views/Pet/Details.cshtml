@model PetDetailsViewModel

<br />
<div class="row">
    <div class="col-5">
        <img class="w-100" 
        src="@FileLocation.RetriveFileFromFolder@Model.Image" class="img-thumbnail"  asp-append-version="true"
        alt="Card image cap">
            </div>
                <div class="col">
                    <div class = "align-items-center">
                        <h3 class="card-title text-primary">@Model.Name</h3>
                        <hr />
                        <h5 class="card-text">@Model.PetTypeName
                        <a asp-controller="PetType" asp-action="Details" asp-route-id="@Model.PetTypeId">
                        <i class="bi bi-question-circle-fill"></i>
                        </a> </h5>
                        <h5 class="card-text">@Model.PetBreedName
                        <a asp-controller="PetBreed" asp-action="Details" asp-route-id="@Model.PetBreedId">
                        <i class="bi bi-question-circle-fill"></i>
                        </a> </h5>
                        <br />
                        <p class="card-text">@Model.Description</p>
                        <p>Price: @Model.Price.ToString()$</p>
                        @if (Model.IsSold.Equals(true))
                        {
                            <h6 class="text text-danger">Status: @(Model.IsSold ? "Sold":"Available")</h6>
                        }

                        else{
                           <h6 class="text text-success">Status: @(Model.IsSold ? "Sold":"Available")</h6>

                        }
                        <br /><br /><br />
                        <a href="/Pet?type=@Model.PetTypeName">
                            <h4 class="text text-primary">
                            Check out all our @(Model.PetTypeName.ToLower())s
                            </h4>
                        </a>
                       <a href="/Pet?breed=@Model.PetBreedName">
                            <h4 class="text text-primary">
                            or @(Model.PetBreedName.ToLower())s!
                            </h4>
                        </a>
        </div>
            </div>  
 </div>

 <br />

@if(User.IsInRole("Admin"))
{
        <a asp-controller="Pet" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pen"></i>
                        Edit
                    </a>
        <a asp-controller="Pet" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"> 
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a>
} &nbsp;&nbsp;&nbsp;
@if (Model.IsSold.Equals(false))
{
    <a asp-controller="Pet" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-success">
        Buy this pet
    </a>
} else
{
    <btn class="btn btn-danger" disabled> Not available </btn>
}
<a asp-controller="Pet" asp-action="Index" class="btn btn-secondary" style="width:250px">
    Go back to the list of pets
</a>
                    