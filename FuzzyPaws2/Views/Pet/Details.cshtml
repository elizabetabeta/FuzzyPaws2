@model PetDetailsViewModel

<br />
<div class="row">
    <div class="col-5">
        <img class="w-100" src="~/images/chow.jpg" alt="Card image cap">
            </div>
                <div class="col">
                    <div class = "align-items-center">
                        <h3 class="card-title">@Model.Name</h3>
                        <hr />
                        <h5 class="card-text">@Model.PetTypeName
                        <a asp-controller="PetType" asp-action="Details" asp-route-id="@Model.PetTypeId">
                        <i class="bi bi-question-circle-fill"></i>
                        </a> </h5>
                        <h5 class="card-text">@Model.PetBreedName
                        <a asp-controller="PetBreed" asp-action="Details" asp-route-id="@Model.PetBreedId">
                        <i class="bi bi-question-circle-fill"></i>
                        </a> </h5>
                        <br />
                        <p class="card-text">@Model.Description</p>
                        <p>Price: @Model.Price $</p>
                        <p>Sold: @Model.IsSold</p>

                    </div>
            </div>  
 </div>

 <br />

 <a asp-controller="Pet" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pen"></i>
                        Edit
                    </a>
<a asp-controller="Pet" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"> 
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a> &nbsp;
    <a asp-controller="Pet" asp-action="Index" class="btn btn-secondary" style="width:250px">
    Go back to the list of pets...
    </a>

