@model PetCreateViewModel

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit pet description
            </h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="PetTypeId"></label>
            <input asp-for="PetTypeId" class="form-control"/>
            <span asp-validation-for="PetTypeId" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="PetBreedId"></label>
            <input asp-for="PetBreedId" class="form-control"/>
            <span asp-validation-for="PetBreedId" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control"/>  
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">
            Update
        </button>
        <a asp-controller="Pet" asp-action="Index" class="btn btn-secondary" style="width:250px">
            Go back to the list of pets...
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}
