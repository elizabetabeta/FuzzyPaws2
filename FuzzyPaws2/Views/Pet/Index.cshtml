@model PetIndexViewModel
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> 
                List of Pets <img src="~/images/cat-icon.png" style="height50px;width:50px"/>
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Pet" asp-action="Create" class="btn btn-primary"> 
                <i class="bi bi-plus-circle"></i>
                Add new pet
             </a>
        </div>
    </div>
</div>

<div class="row text-center">
@foreach(var pet in Model.AllPets)
{            
    <div class="card col-4 pb-2 pt-2">
        <img class="card-img-top" src="https://d2rd7etdn93tqb.cloudfront.net/wp-content/uploads/2020/09/instagram-thechowcalledziggy-chow-chow-dog.jpg" alt="Card image cap">
            <div class="card-body">
                <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.Id">
                <h5 class="card-title">@pet.Name</h5>
                </a>
               
                <div class="w-75 btn-group" role="group">
                        <a asp-controller="Pet" asp-action="Edit" asp-route-id="@pet.Id"
                        class="btn btn-primary mx-2">
                        <i class="bi bi-pen"></i>
                        Edit</a>
                         <a asp-controller="Pet" asp-action="Delete" asp-route-id="@pet.Id" class="btn btn-danger"> 
                        <i class="bi bi-trash3"></i>
                        Delete</a>         
                 </div>
            </div>
    </div>
 }
 </div>

