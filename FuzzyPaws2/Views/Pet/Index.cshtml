@model PetIndexViewModel
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> 
                List of Pets 
                <div class="btn-group">
                  <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="visually-hidden">Toggle Dropdown</span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item" 
                        asp-controller="Pet" asp-action="Available">Available pets</a></li>
                    <li><a class="dropdown-item" 
                        asp-controller="Pet" asp-action="Unavailable">Unavailable pets</a></li>
                  </ul>
                </div>
                <img src="~/images/cat-icon.png" style="height50px;width:50px"/>
            </h2>    
        </div>

        @if(User.IsInRole("Admin"))
        {
        <div class="col-6 text-end">
            <a asp-controller="Pet" asp-action="Create" class="btn btn-primary"> 
                <i class="bi bi-plus-circle"></i>
                Add new pet
             </a>
        </div>
        }

    </div>

    <div class="row pt-4">

        <form asp-action="Index" method="get" class="col-6">
              <div class="form-actions no-color">
                   <p>
                        <input id="search" placeholder="Name..." type="text" name="search" value="@ViewData["CurrentFilter"]" />
                        <input type="submit" value="Search by name" class="btn btn-primary" /> 
                   </p>
              </div>
        </form>
        <div class="col-6 text-end">
            <h3 class="text text-success">Number of pets: @Model.AllPets.Count()</h3>
        </div>
    </div>
     <form asp-action="Index" method="get" class="col-6">
            <div class="form-actions no-color">
                <p>
                    <input id="search" placeholder="Cat, dog, bird..." type="text" name="type" value="@ViewData["CurrentFilter2"]" />
                    <input type="submit" value="Search by type" class="btn btn-primary" /> 
                </p>
            </div>
    </form>
    <form asp-action="Index" method="get" class="col-6">
            <div class="form-actions no-color">
                <p>
                    <input id="search" placeholder="Persian, labrador, budgie..." type="text" name="breed" value="@ViewData["CurrentFilter3"]" />
                    <input type="submit" value="Search by breed" class="btn btn-primary" /> 
                    <a asp-action="Index" class="btn btn-secondary">Full List</a>
                </p>
            </div>
    </form>

</div>


<div class="row text-center">
@foreach(var pet in Model.AllPets)
{            
    <div class="card col-4 pt-2 mb-1"> @*my-1 mx-1 me-1 ms-1*@
        <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.Id">
            <img class="card-img-top" height="100%" width="100" style="min-height:350px" src="@FileLocation.RetriveFileFromFolder@pet.Image" asp-append-version="true" alt="Card image cap" />  
        </a>
            <div class="card-body">
                <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.Id">
                <h5 class="card-title">@pet.Name</h5>
                </a>
                @if (pet.IsSold.Equals(true))
                        {
                            <h6 class="text text-danger">Status: @(pet.IsSold ? "Sold":"Available")</h6>
                        }

                        else{
                           <h6 class="text text-success">Status: @(pet.IsSold ? "Sold":"Available")</h6>

                        }
               
                @*<div class="w-75 btn-group" role="group">
                        <a asp-controller="Pet" asp-action="Edit" asp-route-id="@pet.Id"
                        class="btn btn-primary mx-2">
                        <i class="bi bi-pen"></i>
                        Edit</a>
                         <a asp-controller="Pet" asp-action="Delete" asp-route-id="@pet.Id" class="btn btn-danger"> 
                        <i class="bi bi-trash3"></i>
                        Delete</a>      
                 </div>*@ 
            </div>
        </div>
    }
 </div>

 <style>
     #search{
         width:300px;
         border-radius: 10px;
         padding: 5px;
     }
 </style>
               