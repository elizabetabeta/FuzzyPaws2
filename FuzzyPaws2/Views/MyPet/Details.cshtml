@model MyPetDetailsViewModel

<br />
<div class="row">
    <div class="col-5">
        <img class="w-100" 
        src="@FileLocation.RetriveFileFromFolder@Model.Image" class="img-thumbnail"  asp-append-version="true"
        alt="Card image cap">
            </div>
                <div class="col">
                    <div class = "align-items-center">
                        <h3 class="card-title text-primary">@Model.Name</h3>
                        <hr />
                        <h5 class="card-text">@Model.PetTypeName
                        <a asp-controller="PetType" asp-action="Details" asp-route-id="@Model.PetTypeId">
                        <i class="bi bi-question-circle-fill"></i>
                        </a> </h5>
                        <h5 class="card-text">@Model.PetBreedName
                        <a asp-controller="PetBreed" asp-action="Details" asp-route-id="@Model.PetBreedId">
                        <i class="bi bi-question-circle-fill"></i>
                        </a> </h5>
                        <br />
                        <p class="card-text">@Model.Description</p>
                        <h6 class="text text-success">Owner: @Model.UserName </h6>
                    </div>
            </div>  
 </div>

 <br />

<a asp-controller="MyPet" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pen"></i>
                        Edit
                    </a>
                    
<a asp-controller="MyPet" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"> 
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a> &nbsp; 
    <a asp-controller="MyPet" asp-action="Index" class="btn btn-secondary">
    All my pets
    </a>
                 